{
 "compilerOptions": {
  "esModuleInterop": true,
  "skipLibCheck": true,
  "module": "CommonJS",
  "moduleResolution": "Node",
  "target": "es2022",
  "allowJs": true,
  "resolveJsonModule": true,
  "moduleDetection": "force",
  "isolatedModules": true,
  "baseUrl": ".",
  "paths": {
   "@components/*": ["modules/components/*"],
   "@components": ["modules/components"]
  }
 }
}
